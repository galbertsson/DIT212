<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:contect="com.example.ohimarc.marc.view.editdeck.EditDeckActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="189dp"
        android:background="@android:color/darker_gray"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_deleteCardOrNot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="55dp"
            android:text="Are you sure you want to delete this card?"
            android:textColor="#000"
            android:textSize="18sp" />


    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fb_confirmDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="202dp"
        android:layout_marginStart="50dp"
        android:clickable="true"
        app:srcCompat="@drawable/ic_check_black_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fb_declineDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/fb_confirmDel"
        android:layout_marginEnd="50dp"
        android:clickable="true"
        app:srcCompat="@drawable/ic_close_black_24dp" />


</RelativeLayout>
