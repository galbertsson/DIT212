<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ohimarc.marc">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".view.startMenuView.StartMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.flashcardView.FlashcardActivity" />
        <activity
            android:name=".view.editDeckView.EditNoteActivity"
            android:exported="true"
            android:parentActivityName=".view.editDeckView.EditDeckActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ohimarc.marc.view.editDeckView.EditDeckActivity" />
        </activity>
        <activity android:name=".view.editDeckView.EditDeckActivity" />
        <activity android:name=".view.resultsView.ResultsActivity" />
        <activity android:name=".view.addRemoveDeckView.AddRemoveDeckActivity" />
        <activity android:name=".view.quizView.QuizActivity" />
        <activity android:name=".view.homeView.HomeActivity" />
        <activity android:name=".view.exerciseView.ExerciseActivity"/>
        <activity android:name=".view.choosingDeckView.ChoosingDeckActivity"/>
        <activity android:name=".view.statsView.StatsActivity" />
    </application>

</manifest>